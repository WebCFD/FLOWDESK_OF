FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      boundaryRadiationProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Default radiation properties for all boundary patches
// Using wildcard pattern ".*" to apply to all patches
// TODO (FUTURE): Define patch-specific properties from JSON input

".*"
{
    type            opaqueDiffusive;
    wallAbsorptionEmissionModel
    {
        type            constantAbsorption;
        absorptivity    0.9;
        emissivity      0.9;
    }
}

